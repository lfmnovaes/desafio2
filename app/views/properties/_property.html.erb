  <div class="swiper">
    <div class="absolute top-6 left-6 rounded-full py-0.5 px-2 bg-white">
      ID JD000<%= property.id %>
    </div>
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <%= image_tag(property.cover_photo.path, :class => "p-4") %>
      </div>
      <div class="swiper-slide">
        <%= image_tag(property.photos[0].path, :class => "p-4") %>
      </div>
      <div class="swiper-slide">
        <%= image_tag(property.photos[1].path, :class => "p-4") %>
      </div>
    </div>
    <div class="swiper-button-next font-extrabold"></div>
    <div class="swiper-button-prev font-extrabold"></div>
    <div class="swiper-pagination rounded-3xl"></div>
  </div>
  <div class="px-4 py-4">
    <div class="font-normal text-sm">Jardim Paulista</div>
    <div class="font-semibold text-base mb-2">Address <%= property.name %></div>
